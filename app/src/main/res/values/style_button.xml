<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- 메인 버튼 -->
    <style name="Theme.Dream.Button_Primary" parent="@style/Theme.Dream.Typeface_Title">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/ripple_dream_button_main</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <!-- 서브 버튼 (색 다름) -->
    <style name="Theme.Dream.Button_Secondary" parent="@style/Theme.Dream.Button_Primary">
        <item name="android:backgroundTint">@color/dream_purple_ghost</item>
    </style>

    <!-- 입력 버튼 -->
    <style name="Theme.Dream.Button_Input" parent="@style/Theme.Dream.Typeface_Title">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="android:background">@drawable/ripple_dream_button_main</item>
    </style>
</resources>