<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_round_10"
    android:paddingVertical="14dp">


    <TextView
        android:id="@+id/text_item_name"
        style="@style/Theme.Dream.Typeface_Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toTopOf="@+id/text_count"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        tools:text="앰프&amp;마이크" />

    <TextView
        android:id="@+id/text_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:text="수량"
        android:textColor="@color/text_caption"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/text_period"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_item_name" />

    <TextView
        android:id="@+id/text_period"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:text="대여기간"
        android:textColor="@color/text_caption"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_count" />

    <TextView
        android:id="@+id/text_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:textColor="@color/text_caption"
        app:layout_constraintBottom_toBottomOf="@id/text_period"
        app:layout_constraintEnd_toStartOf="@id/text_status"
        app:layout_constraintStart_toEndOf="@id/text_period"
        app:layout_constraintTop_toTopOf="@id/text_period"
        tools:text="2000. 00. 00 - 00. 00" />

    <TextView
        android:id="@+id/text_date_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:textColor="@color/text_caption"
        app:layout_constraintBottom_toBottomOf="@id/text_period"
        app:layout_constraintEnd_toStartOf="@id/text_status"
        app:layout_constraintStart_toEndOf="@id/text_period"
        app:layout_constraintTop_toTopOf="@id/text_period"
        tools:text="2000. 00. 00 - 00. 00" />

    <TextView
        android:id="@+id/text_count_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:textColor="@color/text_caption"
        app:layout_constraintBottom_toBottomOf="@id/text_count"
        app:layout_constraintEnd_toStartOf="@id/text_status"
        app:layout_constraintStart_toEndOf="@id/text_period"
        app:layout_constraintTop_toTopOf="@id/text_count"
        tools:text="2" />


    <TextView
        android:id="@+id/text_status"
        style="@style/Theme.Dream.Typeface_Title"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="12dp"
        android:background="@drawable/background_circle"
        android:backgroundTint="@color/dream_red"
        android:gravity="center"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="승인" />
</androidx.constraintlayout.widget.ConstraintLayout>