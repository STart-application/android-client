<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/text_date"
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="center"
        app:layout_constraintDimensionRatio="4.5:5"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:textSize="15sp"
        android:textStyle="bold"
        tools:text="2" />

    <ProgressBar
        android:id="@+id/progressbar"
        app:layout_constraintTop_toTopOf="@id/text_date"
        app:layout_constraintBottom_toBottomOf="@id/text_date"
        app:layout_constraintStart_toStartOf="@id/text_date"
        app:layout_constraintEnd_toEndOf="@id/text_date"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_gravity="center"
        android:indeterminate="false"
        android:max="100"
        android:progressBackgroundTint="#D9D9D9"
        android:progressDrawable="@drawable/rent_calendar_progress"
        android:progressTint="@color/dream_purple" />

</androidx.constraintlayout.widget.ConstraintLayout>

