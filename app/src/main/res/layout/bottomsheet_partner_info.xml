<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/text_name"
        style="@style/Theme.Dream.Typeface_Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="26dp"
        android:text="스터디카페"
        android:textColor="@color/dream_purple"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_category"
        style="@style/Theme.Dream.Typeface_Caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="20dp"
        android:text="음식점"
        android:textColor="@color/text_caption"
        app:layout_constraintBaseline_toBaselineOf="@id/text_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@id/text_name"
        app:layout_constraintTop_toTopOf="@id/text_name" />

    <TextView
        android:id="@+id/text_description"
        style="@style/Theme.Dream.Typeface_Caption"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_name"
        tools:text="@tools:sample/lorem/random" />

    <ImageView
        android:id="@+id/image_partner_info_map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:src="@drawable/ic_partner_info_map"
        app:layout_constraintBottom_toBottomOf="@id/text_address"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/text_address" />

    <TextView
        android:id="@+id/text_address"
        style="@style/Theme.Dream.Typeface_Caption"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:text="서울 노원구 공릉동 20 3"
        android:textColor="@color/text_caption"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/image_partner_info_map"
        app:layout_constraintTop_toBottomOf="@id/text_description" />

    <ImageView
        android:id="@+id/image_partner_info_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:src="@drawable/ic_partner_info_phone"
        app:layout_constraintBottom_toBottomOf="@id/text_phone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/text_phone" />

    <TextView
        android:id="@+id/text_phone"
        style="@style/Theme.Dream.Typeface_Caption"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="20dp"
        android:text="010-1234-5678"
        android:textColor="@color/text_caption"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/image_partner_info_map"
        app:layout_constraintTop_toBottomOf="@id/text_address" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/layout_benefit"
        android:layout_width="0dp"
        android:layout_height="130dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/background_round_10"
        android:backgroundTint="@color/dream_purple_background"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_phone">

        <TextView
            android:id="@+id/text_benefit"
            style="@style/Theme.Dream.Typeface_Caption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="@tools:sample/lorem/random" />
    </androidx.core.widget.NestedScrollView>

    <Button
        android:id="@+id/btn_map"
        style="@style/Theme.Dream.Button_Primary"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:text="지도보기"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_benefit" />

</androidx.constraintlayout.widget.ConstraintLayout>