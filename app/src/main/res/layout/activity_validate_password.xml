<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.auth.register.ValidatePasswordActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/toolBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dream_action_bar_height"
        android:background="@color/dream_action_bar_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ic_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dream_layout_margin_horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_dream_back"
            app:tint="@color/white" />

        <TextView
            android:id="@+id/text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pretendard_bold"
            android:text="@string/password"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.16" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image_logo"
        android:layout_width="157dp"
        android:layout_height="76dp"
        android:src="@drawable/logo_dream"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline" />

    <TextView
        style="@style/Theme.Dream.Typeface_Body_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dream_layout_margin_horizontal"
        android:layout_marginBottom="38dp"
        android:text="비밀번호를 설정해주세요.\n(영어 대소문자, 숫자, 특수문자 각 1개 이상 사용)"
        app:layout_constraintBottom_toTopOf="@id/text_password"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/text_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dream_layout_margin_horizontal"
        android:layout_marginBottom="11dp"
        android:fontFamily="@font/pretendard_bold"
        android:text="비밀번호"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/layout_input_password"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_goneMarginStart="@dimen/dream_layout_margin_horizontal" />

    <TextView
        android:id="@+id/text_confirm_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dream_layout_margin_horizontal"
        android:layout_marginBottom="11dp"
        android:fontFamily="@font/pretendard_bold"
        android:text="비밀번호 확인"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/layout_input_confirm_password"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_goneMarginStart="@dimen/dream_layout_margin_horizontal" />

    <LinearLayout
        android:id="@+id/layout_input_password"
        android:layout_width="0dp"
        android:layout_height="@dimen/dream_input_height"
        android:layout_marginHorizontal="@dimen/dream_layout_margin_horizontal"
        android:layout_marginBottom="20dp"
        android:background="@drawable/input_dream"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/text_confirm_password"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/input_password"
            style="@style/Theme.Dream.Typeface_Body_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="@dimen/dream_input_margin_horizontal"
            android:layout_weight="1"
            android:background="@null"
            android:hint="비밀번호를 입력하세요."
            android:imeOptions="actionNext"
            android:inputType="number"
            android:maxLines="1"
            android:textColorHint="@color/dream_gray" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_input_confirm_password"
        android:layout_width="0dp"
        android:layout_height="@dimen/dream_input_height"
        android:layout_marginHorizontal="@dimen/dream_layout_margin_horizontal"
        android:layout_marginBottom="50dp"
        android:background="@drawable/input_dream"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@id/btnNext"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/input_confirm_password"
            style="@style/Theme.Dream.Typeface_Body_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="@dimen/dream_input_margin_horizontal"
            android:layout_weight="1"
            android:background="@null"
            android:hint="비밀번호를 다시 입력하세요."
            android:inputType="text"
            android:maxLines="1"
            android:textColorHint="@color/dream_gray" />
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnNext"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dream_layout_margin_horizontal"
        android:layout_marginBottom="30dp"
        android:background="@drawable/button_dream_main"
        android:fontFamily="@font/pretendard_bold"
        android:text="@string/next"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>